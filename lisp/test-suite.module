(provide "test-suite")
(require "asserts")
(require "time-it")

(defun run-test (path)
  (format t "Running test: ~a~%" path)
  (load path))

(time-it test-time
         (progn
           (run-test "test_aref.lisp")
           (run-test "test_defgeneric.lisp")
           (run-test "test_defstruct.lisp")
           (run-test "test_equal.lisp")
           (run-test "test_format.lisp")
           (run-test "test_handler-case.lisp")
           (run-test "test_hash-table.lisp")
           (run-test "test_lists.lisp")
           (run-test "test_math.lisp")
           (run-test "test_parse.lisp")
           (run-test "test_quasiquote.lisp")
           (run-test "test_setf.lisp")
           (run-test "test_stream.lisp")
           (run-test "test_typep.lisp")
           (run-test "test_unwind-protect.lisp"))
         (format t "Tests completed in ~dms~%" test-time))
